@{ Layout = "~/Views/Shared/_LayoutPage.cshtml"; }
@model IndicatorsUI.MainUI.Models.UserAccess.ForgotPasswordViewModel
@section headContent {
    @Html.Partial("_JavaScriptAndCssForUserAccount")
}
<div class="title-divider"></div>
<div class="container">
    <div class="row col-md-12">
        <div id="div-content">
            <div>
                <h2>Reset Password</h2>
                <div role="note" aria-label="Information" class="application-notice info-notice">
                    <p>Enter your email address that you used to register. We'll send you an email with a link to reset your password. You may need to check your spam folder or unblock <a href="mailto:fingertips@notifications.service.gov.uk?Subject=This%20is%20an%20automatically%20generated%20email,%20please%20do%20not%20reply%20this%20email" title="This is an automatically generated email, please do not reply." target="_top">fingertips@notifications.service.gov.uk</a></p>
                    <p>If you still need help, please contact <a href="mailto:profilefeedback@phe.gov.uk?Subject=Fingertips%20help" target="_top">profilefeedback@phe.gov.uk</a></p>
                </div>
            </div>
            <div>
                <label class="form-label-bold" for="email">
                    <span class="form-label-bold">Email Address</span>
                </label>
                @using (Html.BeginForm("ValidateForgotLogin", "UserAccount", FormMethod.Post, new { id = "frm-forgot-login-for-fingertips" }))
                {
                    @Html.ValidationSummary(true, "", new { @class = "error-message" })
                    Html.EnableClientValidation(true);
                    <form id="forgot-password" action="" method="post">
                        <div class="form-group">
                            @Html.TextBoxFor(s => s.EmailAddress, "", new {@class = "form-control", id = "email"})
                            @Html.ValidationMessageFor(s => s.EmailAddress, "", new {@class = "error-message"})
                        </div>
                        <div>
                            <button class="btn btn-lg btn-primary" type="submit">Send reset password email</button>
                            <br/><br />
                                <p>@Html.ActionLink("Cancel and return to Sign in", "Login")
                                </p>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>
@using IndicatorsUI.DomainObjects

@model ProfileCollection

<h2 class="home-area-text">@Model.CollectionSkinTitle</h2>

@{
    int itemCount = Model.ProfileCollectionItems.Count();
    int record = 1;
    int oneSideDivRecord = itemCount / 2;
}

<!-- create 2 parts and render first and Second here -->
<ul class="data-column nav-col-2">
    @foreach (var profileCollectionItem in Model.ProfileCollectionItems)
    {
        if (record <= oneSideDivRecord)
        {
            <li>@Html.Partial("_ProfileCollectionItemLink", profileCollectionItem)</li>
        }
        else
        {
            <li>@Html.Partial("_ProfileCollectionItemLink", profileCollectionItem)</li>
        }
        record++;
    }
</ul>
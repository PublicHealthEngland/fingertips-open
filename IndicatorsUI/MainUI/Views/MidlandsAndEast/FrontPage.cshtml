@using Profiles.DataAccess
@using Profiles.DomainObjects
@using Profiles.MainUI.Helpers
@using Profiles.MainUI.Models
@model PageModel
@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@section headContent {
    <link href="@(Model.CssPath)core-contentpages.css" rel="stylesheet" type="text/css" />
    <script src="@(Model.JsPath)SiteKeyIndicators.js" type="text/javascript"></script>
    @Html.Partial("_GlobalJsVariablesForContentPage")
}
<div class="title-divider"></div>
<div id="views-public-health-profiles-front-page" class="container">
    <div class="row">
        <div class="col-md-8">
            @Html.Partial("_ProfileCollectionLinks", Model.HighlightedProfileCollection)
            <!--All Profiles-->
            @Html.Partial("_ProfileCollectionLinks", Model.NationalProfileCollection)
        </div>
        <div class="col-md-4">
            @* User Guide *@
            @*            @Html.Partial("_UserGuide")*@
            @* Latest News *@
            @if (AppConfig.Instance.ShowLongerLivesSuicidePrevention)
            {
                @Html.Partial("_LatestNews")
            }
        </div>
        @* About the profiles *@
        <div id="about-fingertips" class="col-md-8">
            @ContentProvider.GetContent("front-page-about-the-profiles", ProfileIds.UnassignedIndicators)
        </div>
    </div>
</div>

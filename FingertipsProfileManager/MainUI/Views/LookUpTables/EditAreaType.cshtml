@using Fpm.MainUI
@using Fpm.MainUI.Helpers
@using Fpm.ProfileData

@model Fpm.ProfileData.Entities.LookUps.AreaType
@{ Layout = "~/Views/Shared/_LayoutPage.cshtml"; }
@{
    ViewBag.Title = "FPM - Edit area type";
}
<link href="@(AppConfig.CssPath)TableSorter.css" rel="stylesheet" type="text/css" />
<script src="@(AppConfig.JsPath)lookup-tables.js" type="text/javascript"></script>

<div class="standardWidth">
    <h2 class="subheading">Edit area type</h2>
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(x => x.Id)
        @Html.HiddenFor(x => x.IsCurrent)

        <div class="row form-group">
            <label class="col-md-2 col-form-label">@Html.LabelFor(x => x.ShortName)</label>
            <div class="col-md-8">
                @Html.TextBoxFor(x => x.ShortName, new { @class = "form-control" })
            </div>
            @Html.ValidationMessageFor(x => x.ShortName)
        </div>

        <div class="row form-group">
            <label class="col-md-2 col-form-label">@Html.LabelFor(x => x.Name)</label>
            <div class="col-md-8">
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            </div>
            @Html.ValidationMessageFor(x => x.Name)
        </div>

        <div class="row form-group">
            <label class="col-md-2 col-form-label">@Html.LabelFor(x => x.IsSupported)</label>
            <div class="col-md-2">
                @Html.CheckBoxFor(x => x.IsSupported, new { @class = "form-control" })
            </div>
        </div>

        <div class="row form-group">
            <label class="col-md-2 col-form-label">@Html.LabelFor(x => x.IsSearchable)</label>
            <div class="col-md-2">
                @Html.CheckBoxFor(x => x.IsSearchable, new { @class = "form-control" })
            </div>
        </div>

        <div class="row form-group">
            <label class="col-md-2 col-form-label">@Html.LabelFor(x => x.ShouldWarnForSmallNumbers)</label>
            <div class="col-md-2">
                @Html.CheckBoxFor(x => x.ShouldWarnForSmallNumbers, new { @class = "form-control" })
            </div>
        </div>

        <div class="row form-group">
            <label class="col-md-2 col-form-label">@Html.LabelFor(x => x.ComponentAreaTypesString)</label>
            <div class="col-md-2">
                @Html.TextBoxFor(x => x.ComponentAreaTypesString, new {@class = "form-control"})
            </div>
        </div>

        <div class="row form-group margin-top-space">

            @if (UserDetails.CurrentUser().IsAdministrator)
            {
                <div class="col-md-7 col-md-offset-2">
                    <input class="btn btn-primary" type="submit" name="action:Save" value="Save" />
                    <input class="btn btn-default" type="button" onclick="setUrl('@SiteUrls.AreaTypeIndex')" value="Cancel" />
                </div>
            }
        </div>
    }
</div>

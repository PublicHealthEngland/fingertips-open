@using Fpm.ProfileData
@model Fpm.ProfileData.Entities.Profile.IndicatorMetadataTextProperty

@{
    var propertyId = Model.PropertyId;
    var isBeingRetired = propertyId == IndicatorTextMetadataPropertyIds.FullName ||
    propertyId == IndicatorTextMetadataPropertyIds.Policy;
    var isNotCurrentlyUsed = propertyId == IndicatorTextMetadataPropertyIds.SpecificRationale;
}

@if (isBeingRetired)
{
    <br><small style="color: red; font-size: 80%; font-style: italic;">(Will be deleted soon)</small>
}
@if (isNotCurrentlyUsed)
{
    <br><small style="color: green; font-size: 80%; font-style: italic;">(Will be used soon)</small>
}
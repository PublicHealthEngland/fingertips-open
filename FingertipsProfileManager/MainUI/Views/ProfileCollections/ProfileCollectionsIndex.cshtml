@using System.Web.Mvc.Html
@model Fpm.MainUI.ViewModels.ProfileCollections.ProfileCollectionGridViewModel
@{ Layout = "~/Views/Shared/_LayoutPage.cshtml"; }
@{
    ViewBag.Title = "FPM - Profile Collection Manager";
}
@Html.Partial("_ProfileCollectionIncludes")

<div class="standardWidth">

    <div class="row col-md-12">
        <h2 class="subheading">Profile collections</h2>

        @if (Model.ProfileCollectionGrid.Count > 0)
        {
            <table class="grid sortable">
                <thead>
                    <tr>
                        <th class="header">Collection Id</th>
                        <th class="header">Collection Name</th>
                        <th class="header">Collection Title</th>
                    </tr>
                </thead>
                @foreach (var item in Model.ProfileCollectionGrid)
                {
                    <tr>
                        <td class="left">
                            @item.Id.ToString()
                        </td>
                        <td class="left">
                            @Html.ActionLink(item.CollectionName, "EditProfileCollection", 
                                new { profileCollectionId = item.Id, profileCollectionName = item.CollectionName }, null)
                        </td>
                        <td class="left">
                            @item.CollectionSkinTitle
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <label>No profiles items have been added to this profile collection.</label>
        }

        <input type="button" value="New profile collection" class="btn btn-primary" 
               onclick="location.href = '@Url.Action("CreateProfileCollection", "ProfileCollections")'" />
    </div>
</div>
@using Fpm.MainUI
@model Fpm.MainUI.ViewModels.Upload.UploadIndexViewModel
@{ Layout = "~/Views/Shared/_LayoutPage.cshtml"; }
@{
    ViewBag.Title = "FPM - Upload data";
}

@section ExtraScripts{
    <script src="@(AppConfig.JsPath)angular.js" type="text/javascript"></script>
    <script src="@(AppConfig.JsPath)angular-route.js" type="text/javascript"></script>
    <script src="@(AppConfig.JsPath)jquery.form.js" type="text/javascript"></script>
}

@section AngularApp
{
    <script src="@(AppConfig.AngularAppPath)upload/upload-app.js" type="text/javascript"></script>
}

@{
    <script>
        var pageConst = {
            batchTemplateUrl: '@Model.BatchTemplateUrl',
            batchLastUpdated: '@Model.BatchLastUpdated'
        }
        var currentUser = @Html.Raw(Json.Encode(Model.User));
    </script>
}

<div class="standardWidth">
    <h2 class="subheading">Upload data to PHOLIO</h2>
</div>
<div class="container" ng-app="uploadApp">
    <ul class="nav nav-tabs" id="upload-tabs">
        <li class="cursor-pointer" id="upload-tab">
            <a data-target="#" data-toggle="tab" ng-href="#/">Upload new data</a>
        </li>
        <li class="cursor-pointer" id="progress-tab">
            <a data-toggle="tab" ng-href="#status">Your upload jobs&nbsp;</a>
        </li>
        <li class="cursor-pointer" id="queue-tab">
            <a data-toggle="tab" ng-href="#queue">Active upload jobs&nbsp;</a>
        </li>
    </ul>
    <div ng-view></div>
</div>